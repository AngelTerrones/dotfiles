# ------------------------------------------------------------------------------
# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# ------------------------------------------------------------------------------
set $execute exec "rofi -modi run,drun -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -font 'Noto Sans 10'"
set $window exec "rofi -lines 12 -padding 18 -width 60 -location 0 -show window -sidebar-mode -font 'Noto Sans 10'"
bindsym $mod+d $execute
bindsym $mod+Tab $window

